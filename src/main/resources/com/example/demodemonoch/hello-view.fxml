            <children>
                <Label fx:id="invalidLoginCredentials" alignment="CENTER" contentDisplay="CENTER" layoutX="540.0"
                       layoutY="137.0" prefHeight="426.0" prefWidth="354.0"
                       style="-fx-background-color: #FFFFFF; -fx-scale-z: 10;" textAlignment="CENTER" textFill="RED">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </Label>
