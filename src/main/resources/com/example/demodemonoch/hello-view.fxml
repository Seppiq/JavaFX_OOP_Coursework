                    <font>
                        <Font name="SansSerif Regular" size="25.0"/>
                    </font>
                </TextField>
                <Label layoutX="677.0" layoutY="271.0" prefHeight="30.0" prefWidth="90.0"
                       style="-fx-text-fill: #A9A9A9;" text="Login">
